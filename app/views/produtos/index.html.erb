<%= search_form_for @q do |f| %>
  <%= f.label :nome %>
  <%= f.search_field :nome_cont %>
  <%= f.submit %>
  <%= link_to "Novo produto", new_produto_path, class: 'btn btn-primary' %>  
  <% end %>
<table class="table">
  <thead>
    <tr>
      <th scope="col">Nome</th>
      <th scope="col">Quantidade</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @produtos.each do |produto| %>
      <tr>
        <td><%= produto.nome %></td>
        <td><%= produto.quantidade %></td>
        <td>
          <%= link_to "Show", produto, class: 'btn btn-primary btn-sm' %>
          <%= link_to "Edit", edit_produto_path(produto), class: 'btn btn-warning btn-sm' %>
          <%= link_to "Destroy", produto, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%== pagy_bootstrap_nav(@pagy) %>


