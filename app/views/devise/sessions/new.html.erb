  <html lang="en" dir="ltr">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> Registration or Sign Up form in HTML CSS | CodingLab </title> 
    <%= stylesheet_link_tag 'new_session' %>
   </head>
<body>
  <div class="wrapper">
    <h2>Login</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="input-box">
        <%= f.label :email %>
        <%= f.email_field :email, placeholder: "Enter your email", required: true%>
      </div>

      <div class="input-box">
        <%= f.label :password %> 
        <%= f.password_field :password, placeholder: "Enter your password", required: true %>
      </div>

      <div class="policy">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %> 
      </div>
      
      <div class="input-box button">
        <%= f.submit "Login Now" %> 
      </div>
        <% end %>
      <div class="text">
        <h3>Don't have an account?<%= link_to "Register now", new_registration_path(resource_name) %></h3>
      </div>
    </form>
  </div>
</body>
</html>
