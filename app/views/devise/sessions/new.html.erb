  <html lang="en" dir="ltr">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> Registration or Sign Up form in HTML CSS | CodingLab </title> 
    <%= stylesheet_link_tag 'new_session' %>
   </head>
<body>
  <div class="wrapper">
    <h2>Login</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="input-box">
        <%= f.label :email %>
        <%= f.email_field :email, placeholder: "Digite o seu email", required: true%>
      </div>

      <div class="input-box">
        <%= f.label :password, "Senha" %> 
        <%= f.password_field :password, placeholder: "Digite a sua senha", required: true %>
      </div>

      <div class="policy">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, "Lembrar de mim" %> 
      </div>
      
      <div class="input-box button">
        <%= f.submit "Entrar" %> 
      </div>
        <% end %>
      <div class="text">
        <h3>NÃ£o tem uma conta? <%= link_to "Registre agora", new_registration_path(resource_name) %></h3>
      </div>
    </form>
  </div>
</body>
</html>
